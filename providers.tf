# --------------------------------------------------------------------------------------------------
# AWS 提供商設定
# --------------------------------------------------------------------------------------------------

# 預設的 Provider，用於建立區域性資源 (S3)
provider "aws" {
  region = "ap-northeast-1" # 東京區域
}

# 建立一個 "別名 (alias)" Provider，專門用於建立全球性資源 (CloudFront)
provider "aws" {
  alias  = "us_east_1"
  region = "us-east-1" # CloudFront API 的主要端點
}
